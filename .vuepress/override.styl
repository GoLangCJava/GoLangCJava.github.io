/**
 * 自定义样式覆盖
 * 导航栏布局调整：将右侧菜单移到最右侧
 */

/* 导航栏布局调整 */
.navbar
  padding-right 1.5rem
  
  /* 链接容器改为 flex 布局，方便对齐 */
  .links
    display flex
    align-items center
    justify-content flex-end  /* 将内容推到右侧 */
    padding-left auto
    flex-grow 1
    
    /* 左侧：logo 和站点名称 */
    .home-link
      order 1  /* 第一个元素 */
      margin-right 1.5rem
    
    .site-name
      order 2
      margin-right auto
      display none  /* 移动端隐藏 */
    
    @media (min-width: 720px)
      display block
    
    /* 右侧：搜索框和导航链接 */
    .search-box
      order 3  /* 放在最右侧 */
      margin-right 0
    
    .nav-links
      order 4  /* 放在最右侧 */
      margin-right 0
      margin-left 1.5rem
    
    /* 移动端：导航链接下移到搜索框下方 */
    @media (max-width: 719px)
      flex-direction column
      align-items flex-start
      
      .search-box
        order 1
        margin-bottom 1rem
      
      .nav-links
        order 2
        margin-left 0

/* 导航链接间距 */
.nav-links
  .nav-item
    margin-left 0.5rem
  
  @media (max-width: 719px)
    .nav-item
      margin-left 0

/* 调整导航栏右侧间距 */
.navbar .site-name
  @media (min-width: 720px)
    display inline-block
    margin-right 1rem
